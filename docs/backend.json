
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "enum": [
            "user",
            "admin"
          ],
          "description": "The role of the user."
        }
      },
      "required": [
        "uid",
        "email",
        "role"
      ]
    },
    "Unit": {
      "title": "Unit",
      "description": "Represents a course module or unit.",
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "The unique code for the unit (e.g., BD-M01)."
        },
        "title": {
          "type": "string",
          "description": "The English title of the unit."
        },
        "sinhalaTitle": {
          "type": "string",
          "description": "The Sinhala title of the unit."
        },
        "category": {
          "type": "string",
          "description": "The category of the unit (e.g., bridal, beauty, hair)."
        },
        "priceSinhalaNote": {
          "type": "number",
          "description": "Price for the Sinhala note PDF."
        },
        "priceSinhalaAssignment": {
          "type": "number",
          "description": "Price for the Sinhala assignment PDF."
        },
        "priceEnglishNote": {
          "type": "number",
          "description": "Price for the English note PDF."
        },
        "priceEnglishAssignment": {
          "type": "number",
          "description": "Price for the English assignment PDF."
        },
        "pdfUrlSinhalaNote": {
          "type": "string",
          "format": "uri",
          "description": "URL for the Sinhala note PDF."
        },
        "pdfUrlSinhalaAssignment": {
          "type": "string",
          "format": "uri",
          "description": "URL for the Sinhala assignment PDF."
        },
        "pdfUrlEnglishNote": {
          "type": "string",
          "format": "uri",
          "description": "URL for the English note PDF."
        },
        "pdfUrlEnglishAssignment": {
          "type": "string",
          "format": "uri",
          "description": "URL for the English assignment PDF."
        }
      },
      "required": [
        "code",
        "title",
        "sinhalaTitle",
        "category"
      ]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer order.",
      "type": "object",
      "properties": {
        "orderCode": {
          "type": "string",
          "description": "A unique, human-readable code for the order."
        },
        "userId": {
          "type": "string",
          "description": "The UID of the user who placed the order."
        },
        "userDisplayName": {
            "type": "string",
            "description": "The display name of the user."
        },
        "userEmail": {
            "type": "string",
            "format": "email",
            "description": "The email of the user."
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "unitId": { "type": "string" },
              "unitCode": { "type": "string" },
              "itemName": { "type": "string" },
              "price": { "type": "number" },
              "itemType": { "type": "string" },
              "userFileUrl": { "type": "string" }
            },
            "required": ["unitId", "itemName", "price", "itemType"]
          }
        },
        "total": {
          "type": "number",
          "description": "The total price of the order."
        },
        "status": {
          "type": "string",
          "enum": ["pending", "processing", "completed", "rejected"],
          "description": "The current status of the order."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the order was created."
        }
      },
      "required": ["orderCode", "userId", "items", "total", "status", "createdAt"]
    },
    "ManualOrderKey": {
      "title": "Manual Order Key",
      "description": "Represents a redeemable key for a manual order.",
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "description": "The unique, redeemable key."
        },
        "orderCode": {
          "type": "string",
          "description": "A unique, human-readable code for the manual order (e.g., MAN-1001)."
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/Order/properties/items/items"
          }
        },
        "total": {
          "type": "number",
          "description": "The total value of the items in the key."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "redeemedBy": {
          "type": "string",
          "description": "The UID of the user who redeemed the key."
        },
        "redeemedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["key", "orderCode", "items", "total", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "email",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/units/{unitId}": {
      "schema": {
        "$ref": "#/backend/entities/Unit"
      },
      "description": "Stores course units/modules with pricing and PDF links."
    },
    "/orders/{orderId}": {
      "schema": {
        "$ref": "#/backend/entities/Order"
      },
      "description": "Stores customer orders for study materials."
    },
    "/manualOrderKeys/{keyId}": {
      "schema": {
        "$ref": "#/backend/entities/ManualOrderKey"
      },
      "description": "Stores redeemable keys for manual orders."
    }
  }
}
