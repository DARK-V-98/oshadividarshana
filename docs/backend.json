{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "enum": [
            "user",
            "admin"
          ],
          "description": "The role of the user."
        }
      },
      "required": [
        "uid",
        "email",
        "role"
      ]
    },
    "Unit": {
      "title": "Unit",
      "description": "Represents a course module or unit.",
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "The unique code for the unit (e.g., BD-M01)."
        },
        "title": {
          "type": "string",
          "description": "The English title of the unit."
        },
        "sinhalaTitle": {
          "type": "string",
          "description": "The Sinhala title of the unit."
        },
        "category": {
          "type": "string",
          "description": "The category of the unit (e.g., bridal, beauty, hair)."
        }
      },
      "required": [
        "code",
        "title",
        "sinhalaTitle",
        "category"
      ]
    }
  },
  "auth": {
    "providers": [
      "email",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/units/{unitId}": {
      "schema": {
        "$ref": "#/backend/entities/Unit"
      },
      "description": "Stores course units/modules."
    }
  }
}
